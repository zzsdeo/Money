<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="ru.zzsdeo.money">
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AddAccountActivity"
            android:label="Добавить счет"/>

        <activity android:name=".ManageAccountsActivity"
            android:label="Управление счетами"/>

        <activity android:name=".EditAccountActivity"
            android:label="Редактировать счет"/>

        <provider
            android:name="ru.zzsdeo.money.db.DatabaseContentProvider"
            android:authorities="ru.zzsdeo.money.contentprovider"
            android:exported="false" >
        </provider>

    </application>

</manifest>
