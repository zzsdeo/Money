<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/observable_scroll_view">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Несоответствие баланса"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/material_deep_teal_500"
                android:id="@+id/parsed_balance_title"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_parsed_balance"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Баланс"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/material_deep_teal_500" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_accounts_main"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Неподтвержденные транзакции"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/need_confirm"
                android:textColor="@color/material_deep_teal_500" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_need_confirm"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Без категории"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/without_category"
                android:textColor="@color/material_deep_teal_500" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_need_category"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расходы за месяц"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/material_deep_teal_500" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_expenses"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

</FrameLayout>